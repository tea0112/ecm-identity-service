# ============================================================
# ECM Identity Service - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# .env is gitignored - never commit real values!
# ============================================================

# ------------------------------------------------------------
# DATABASE (Required)
# ------------------------------------------------------------
DB_URL=jdbc:postgresql://localhost:5432/ecm_identity_dev
DB_USERNAME=dev_ecm
DB_PASSWORD=dev_ecm!23456
DB_SCHEMA=dev_ecm

# ------------------------------------------------------------
# SECURITY BOOTSTRAP (Required for first run)
# ------------------------------------------------------------
# Password for the initial admin account
# Leave empty to skip admin creation
ADMIN_INITIAL_PASSWORD=Admin123!
ADMIN_EMAIL=admin@localhost

# ------------------------------------------------------------
# OPTIONAL OVERRIDES
# Uncomment and modify to customize behavior
# ------------------------------------------------------------

# Server
# SERVER_PORT=8080

# Logging (DEBUG, INFO, WARN, ERROR)
# LOG_LEVEL_ROOT=INFO
# LOG_LEVEL_APP=DEBUG
# LOG_LEVEL_LIQUIBASE=WARN

# JPA
# JPA_SHOW_SQL=false
# JPA_FORMAT_SQL=false

# Liquibase contexts (dev, uat, prod)
# LIQUIBASE_CONTEXTS=prod

# Error responses
# ERROR_INCLUDE_MESSAGE=never
# ERROR_INCLUDE_STACKTRACE=never